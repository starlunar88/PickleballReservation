rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 시스템 설정 - 누구나 읽기 가능 (예약 현황 표시용), 관리자만 쓰기 가능
    match /settings/{settingId} {
      allow read: if true;  // 로그인 없이도 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 사용자 컬렉션 - 자신의 문서만 읽기/쓰기 가능, 관리자는 모든 문서 읽기 가능
    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId ||
         (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true));
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 예약 컬렉션 - 누구나 읽기 가능 (예약 현황 표시용)
    // 자신의 예약만 수정/삭제 가능, 관리자는 모든 예약 수정/삭제 가능
    match /reservations/{reservationId} {
      // 누구나 읽기 가능 (로그인 없이도 예약 현황 표시 가능)
      allow read: if true;
      
      // 예약 생성 - 자신의 userId로만 생성 가능
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // 예약 수정/삭제 - 자신의 예약이거나 관리자인 경우
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId ||
         (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true));
    }
    
    // 관리자 컬렉션 - 관리자만 읽기 가능
    match /admins/{adminId} {
      allow read: if request.auth != null && 
        (request.auth.uid == adminId ||
         (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true));
      allow write: if false; // 관리자 문서는 코드에서만 생성
    }
    
    // 승인된 회원가입 목록 - 인증된 사용자가 읽기 가능
    match /approvedSignups/{email} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 회원가입 요청 - 인증된 사용자가 읽기 가능
    match /signupRequests/{requestId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 대진표 관련 컬렉션들 - 누구나 읽기 가능
    match /matches/{matchId} {
      allow read: if true;  // 로그인 없이도 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /matchRecords/{recordId} {
      allow read: if true;  // 로그인 없이도 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 게임 결과
    match /gameResults/{resultId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 팀 정보
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 사용자 평점
    match /userRatings/{ratingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 알림 관련
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow write: if request.auth != null;
    }
    
    match /adminNotifications/{notificationId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 미할당 플레이어
    match /unassigned_players/{playerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}

