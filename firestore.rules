rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 시스템 설정 - 누구나 읽기 가능 (예약 현황 표시용), 관리자만 쓰기 가능
    match /settings/{settingId} {
      allow read: if true;  // 로그인 없이도 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 사용자 컬렉션 - 자신의 문서만 읽기/쓰기 가능, 관리자는 모든 문서 읽기 가능
    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId ||
         (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true));
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 예약 컬렉션 - 누구나 읽기 가능 (예약 현황 표시용)
    // 자신의 예약만 수정/삭제 가능, 관리자는 모든 예약 수정/삭제 가능
    match /reservations/{reservationId} {
      // 누구나 읽기 가능 (로그인 없이도 예약 현황 표시 가능)
      allow read: if true;
      
      // 예약 생성 - 자신의 userId로만 생성 가능
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // 예약 수정/삭제 - 자신의 예약이거나 관리자인 경우
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId ||
         (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true));
    }
    
    // 관리자 컬렉션 - 관리자만 읽기 가능
    match /admins/{adminId} {
      allow read: if request.auth != null && 
        (request.auth.uid == adminId ||
         (exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true));
      allow write: if false; // 관리자 문서는 코드에서만 생성
    }
    
    // 승인된 회원가입 목록 - 인증된 사용자가 읽기 가능
    match /approvedSignups/{email} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 회원가입 요청 - 누구나 생성 가능 (회원가입 요청용), 인증된 사용자가 읽기 가능, 관리자만 수정/삭제 가능
    match /signupRequests/{requestId} {
      // 회원가입 요청 생성 - 누구나 가능 (인증 없이도 회원가입 요청 가능)
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'status', 'requestedAt']) &&
                     request.resource.data.status == 'pending' &&
                     request.resource.data.name is string &&
                     request.resource.data.email is string &&
                     request.resource.data.name.size() > 0 &&
                     request.resource.data.email.size() > 0 &&
                     request.resource.data.email.matches('.*@.*\\..*');
      
      // 읽기 - 인증된 사용자만 가능
      allow read: if request.auth != null;
      
      // 수정/삭제 - 관리자만 가능
      allow update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 대진표 관련 컬렉션들 - 누구나 읽기 가능
    match /matches/{matchId} {
      allow read: if true;  // 로그인 없이도 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /matchRecords/{recordId} {
      allow read: if true;  // 로그인 없이도 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 게임 결과 - 누구나 읽기 가능 (대진표와 함께 공개 표시), 관리자만 쓰기 가능
    match /gameResults/{resultId} {
      allow read: if true;  // 로그인 없이도 읽기 가능 (대진표 공개용)
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 팀 정보 - 누구나 읽기 가능 (대진표와 함께 공개 표시), 관리자만 쓰기 가능
    match /teams/{teamId} {
      allow read: if true;  // 로그인 없이도 읽기 가능 (대진표 공개용)
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 사용자 평점 - 모든 인증된 사용자가 읽기/쓰기 가능
    match /userRatings/{ratingId} {
      allow read: if request.auth != null;  // 모든 인증된 사용자가 읽기 가능
      allow write: if request.auth != null;  // 모든 인증된 사용자가 쓰기 가능
    }
    
    // 알림 관련 - 자신의 알림만 읽기 가능, 인증된 사용자가 생성 가능
    match /notifications/{notificationId} {
      // 자신의 알림만 읽기 가능
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // 인증된 사용자가 알림 생성 가능 (시스템 알림 등)
      allow create: if request.auth != null;
      // 자신의 알림만 수정/삭제 가능
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /adminNotifications/{notificationId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      // 관리자 알림 생성 - 누구나 가능 (회원가입 요청 시 알림 생성용)
      allow create: if request.resource.data.keys().hasAll(['type', 'status', 'createdAt']) &&
                     request.resource.data.type == 'signupRequest' &&
                     request.resource.data.status == 'pending';
      // 수정/삭제 - 관리자만 가능
      allow update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 미할당 플레이어 - 인증된 사용자가 읽기 가능, 관리자만 쓰기 가능
    match /unassigned_players/{playerId} {
      allow read: if request.auth != null;  // 인증된 사용자가 읽기 가능
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 토너먼트 컬렉션 - 누구나 읽기 가능, 관리자만 생성/수정/삭제 가능
    match /tournaments/{tournamentId} {
      // 누구나 읽기 가능 (토너먼트 목록 표시용)
      allow read: if true;
      
      // 토너먼트 생성 - 관리자만 가능
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      
      // 토너먼트 수정 - 관리자만 가능 (대진표 생성, 점수 입력 등)
      allow update: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      
      // 토너먼트 삭제 - 관리자만 가능
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // 토너먼트 예약 컬렉션 - 자신의 예약만 생성/삭제 가능, 누구나 읽기 가능
    match /tournamentRegistrations/{registrationId} {
      // 누구나 읽기 가능
      allow read: if true;
      
      // 예약 생성 - 자신의 userId로만 생성 가능
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // 예약 삭제 - 자신의 예약만 삭제 가능
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // 예약 수정 불가 (생성/삭제만 가능)
      allow update: if false;
    }
  }
}

